@model Wish.Models.WishListItem

@{
    ViewData["Title"] = "Delete";
}


<br />
<div>
    <div class="row">
        <h3>Are you sure you want to delete this item?</h3>
    </div>
    <br />
</div>
<div class="row ">
    <div class="col-sm-3">
        <img src="@Model.ImageURL" class="img-thumbnail" />
    </div>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageURL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Acquired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Acquired)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </form>
</div>